{
  /************/
  /* HTML/CSS */
  /************/
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (Eex)"
  ],

  /**********/
  /* ESLint */
  /**********/
  "eslint.alwaysShowStatus": true,
  "eslint.packageManager": "yarn",
  "eslint.validate": ["vue", "html", "javascript", "typescript"],
  "eslint.workingDirectories": [{ "mode": "auto" }],

  /************/
  /* Markdown */
  /************/
  "markdown.preview.fontFamily": "Calibri, Roboto, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', 'Ubuntu', 'Droid Sans', sans-serif",

  /*************/
  /* Terraform */
  /*************/
  "terraform.languageServer": {
    "external": true,
    "args": ["serve"]
  },

  /*******/
  /* Vue */
  /*******/
  "vetur.format.defaultFormatter.js": "prettier-eslint",
  "attrsSorter.order": [
    "is",
    "v-for",
    "v-if",
    "v-else-if",
    "v-else",
    "v-show",
    "v-cloak",
    "v-once",
    "v-pre",
    "id",
    "ref",
    "key",
    "slot",
    "v-model",
    "v-model.+",
    "v-bind",
    "v-bind.+",
    ":.+",
    "v-text",
    "v-text.+",
    "v-html",
    "v-html.+",
    "class",
    "v-on.+",
    "@.+",
    "name",
    "data-.+",
    "ng-.+",
    "src",
    "for",
    "type",
    "href",
    "values",
    "title",
    "alt",
    "role",
    "aria-.+",
    "$unknown$"
  ],

  /*****************/
  /* Spell-checker */
  /*****************/
  "cSpell.userWords": [
    "Barissat",
    "Romain",
    "builtins",
    "iife",
    "kanban",
    "olivr",
    "symlink"
  ],
  "cSpell.ignorePaths": [
    "**/node_modules",
    "**/.git",
    "**/vendor",
    "**/.terraform",
    "**/dist"
  ],

  /*******************/
  /* Code formatting */
  /*******************/
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /************/
  /* Terminal */
  /************/
  "terminal.integrated.fontFamily": "MesloLGL Nerd Font",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.env.osx": {
    "STARSHIP_CONFIG": "${env:HOME}/.config/starship.vscode.toml"
  },

  /**********/
  /* Editor */
  /**********/
  "editor.fontFamily": "'Rec Mono Duotone', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontLigatures": "'ss01','ss03', 'ss06'",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,

  "files.autoSave": "off",

  "vsicons.dontShowNewVersionMessage": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.iconTheme": "vscode-icons"
}
